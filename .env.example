# Environment Configuration Template
# Rename this file to .env untuk production use

# ================================
# APPLICATION SETTINGS
# ================================

# Application name
APP_NAME=ProjectAkhir

# Environment: development, testing, production
APP_ENV=development

# Debug mode (false untuk production!)
APP_DEBUG=true

# Base URL of application
APP_URL=http://localhost:8080

# Timezone
APP_TIMEZONE=Asia/Jakarta

# ================================
# DATABASE CONFIGURATION
# ================================

# Database connection type
DB_CONNECTION=mysql

# Docker: gunakan 'db' sebagai hostname
# Local: gunakan 'localhost'
DB_HOST=db

# Database port
DB_PORT=3306

# Database name
DB_DATABASE=project_akhir

# Database user
DB_USERNAME=project_user

# Database password
DB_PASSWORD=userpass

# MySQL root password (untuk admin access)
MYSQL_ROOT_PASSWORD=secret

# ================================
# SESSION CONFIGURATION
# ================================

# Session driver: file, database, redis
SESSION_DRIVER=database

# Session lifetime in minutes
SESSION_LIFETIME=120

# Session cookie name
SESSION_COOKIE_NAME=PHPSESSID

# Secure session (true untuk HTTPS only)
SESSION_SECURE_COOKIE=false

# ================================
# DOCKER CONFIGURATION
# ================================

# Docker environment flag
DOCKER_ENV=development

# Docker compose project name
COMPOSE_PROJECT_NAME=project-akhir

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================

MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_password
MAIL_FROM_ADDRESS=noreply@project-akhir.local
MAIL_FROM_NAME="Project Akhir"

# ================================
# FILE UPLOAD CONFIGURATION
# ================================

# Max upload size (in MB)
MAX_UPLOAD_SIZE=50

# Allowed file types
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# ================================
# SECURITY CONFIGURATION
# ================================

# API encryption key
APP_KEY=your-secret-key-here-change-in-production

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting (requests per minute)
RATE_LIMIT=60

# ================================
# LOGGING CONFIGURATION
# ================================

# Log channel: stack, single, daily
LOG_CHANNEL=stack

# Log level: debug, info, notice, warning, error, critical, alert, emergency
LOG_LEVEL=debug

# ================================
# CACHE CONFIGURATION
# ================================

# Cache driver: file, array, database, redis
CACHE_DRIVER=array

# Cache default time (in minutes)
CACHE_DEFAULT_TTL=60

# ================================
# QUEUE CONFIGURATION
# ================================

# Queue driver: sync, database, redis
QUEUE_DRIVER=sync

# ================================
# REDIS CONFIGURATION (if used)
# ================================

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================

# Google OAuth (if implemented)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS S3 (if using for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# ================================
# PAYMENT GATEWAY (if needed)
# ================================

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Midtrans
MIDTRANS_MERCHANT_ID=
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=

# ================================
# SMS GATEWAY (if needed)
# ================================

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ================================
# NOTES
# ================================

# IMPORTANT: Never commit actual .env to git!
# Use .env.example for version control

# For development:
# - Copy this file to .env
# - Update values as needed
# - Keep DB_HOST=db (Docker)

# For production:
# - Change APP_ENV=production
# - Change APP_DEBUG=false
# - Update all sensitive values
# - Use strong passwords
# - Use environment variables for secrets
# - Enable HTTPS (SESSION_SECURE_COOKIE=true)
